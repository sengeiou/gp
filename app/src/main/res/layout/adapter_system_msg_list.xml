    <RelativeLayout
        android:id="@+id/rl_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_74"
        android:background="@drawable/selector_alarm_item"
        android:orientation="horizontal">

        <com.ubtechinc.goldenpig.view.NewCircleImageView
            android:id="@+id/iv"
            android:layout_width="@dimen/dp_41"
            android:layout_height="@dimen/dp_41"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_notice" />

        <ImageView
            android:id="@+id/iv_red_point"
            android:layout_width="@dimen/dp_9"
            android:layout_height="@dimen/dp_9"
            android:layout_alignRight="@+id/iv"
            android:layout_alignTop="@+id/iv"
            android:layout_marginRight="@dimen/dp_2"
            android:layout_marginTop="@dimen/dp_2"
            android:src="@drawable/red_circle"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_toLeftOf="@+id/tv_date"
            android:layout_toRightOf="@+id/iv"
            android:drawableRight="@drawable/red_circle"
            android:paddingLeft="@dimen/dp_11"
            android:singleLine="true"
            android:text="上午上午上午上午上和和上和和"
            android:textColor="@color/ubt_tips_txt_color"
            android:textSize="@dimen/sp_15"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_title"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/tv_title"
            android:layout_marginRight="@dimen/dp_20"
            android:gravity="center_vertical"
            android:text="2018-12-04"
            android:textColor="@color/pic_ff69gray_color"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv"
            android:layout_marginLeft="@dimen/dp_11"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_toRightOf="@+id/iv"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="小飞祝你猪年行大运"
            android:textColor="@color/pic_ff69gray_color"
            android:textSize="@dimen/sp_13" />

    </RelativeLayout>

