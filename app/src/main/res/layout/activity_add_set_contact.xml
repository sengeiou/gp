<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ubt_main_bg_color"
    android:orientation="vertical"
    tools:context=".personal.DeviceManageActivity">

    <com.ubtechinc.goldenpig.actionbar.SecondTitleBarViewTv
        android:id="@+id/rl_titlebar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@color/ubt_white"></com.ubtechinc.goldenpig.actionbar.SecondTitleBarViewTv>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/ubt_1px"
        android:background="@color/ubt_wifi_list_divider" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_38"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="昵称"
            android:textColor="@color/ubt_tips_txt_color"
            android:textSize="@dimen/dp_16" />

        <EditText
            android:id="@+id/et_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:hint="请输入6个字内的中文昵称"
            android:textColorHint="@color/empty_color"
            android:textColor="@color/ubt_tips_txt_color"
            android:textCursorDrawable="@drawable/color_cursor2"
            android:textSize="@dimen/dp_16" />

        <!--<ImageView-->
        <!--android:id="@+id/iv_name_clear"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_gravity="center_vertical"-->
        <!--android:padding="@dimen/dp_8"-->
        <!--android:src="@drawable/ic_close"-->
        <!--android:visibility="invisible" />-->

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/ubt_1px"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@color/ubt_wifi_list_divider" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_38"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="标签"
            android:textColor="@color/ubt_tips_txt_color"
            android:textSize="@dimen/dp_16" />

        <ImageView
            android:layout_width="@dimen/dp_12"
            android:layout_height="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_5"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_attention" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:maxLines="1"
            android:text="使用标签昵称，高效避免识别问题，提升拨号体验"
            android:textColor="#29AAFF"
            android:textSize="@dimen/dp_12" />
    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_17"
        android:background="@drawable/bg_contact"
        android:overScrollMode="never" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_38"
        android:layout_marginTop="@dimen/dp_8"
        android:gravity="center_vertical"
        android:layout_marginRight="@dimen/dp_15"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="手机号"
            android:textColor="@color/ubt_tips_txt_color"
            android:textSize="@dimen/dp_16" />

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:inputType="number"
            android:maxLength="20"
            android:singleLine="true"
            android:hint="请输入手机号码"
            android:textColorHint="@color/empty_color"
            android:textColor="@color/ubt_tips_txt_color"
            android:textCursorDrawable="@drawable/color_cursor2"
            android:textSize="@dimen/sp_16" />

        <!--<ImageView-->
            <!--android:id="@+id/iv_phone_clear"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_gravity="center_vertical"-->
            <!--android:padding="@dimen/dp_8"-->
