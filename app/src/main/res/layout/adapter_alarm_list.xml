<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_84"
    android:background="@drawable/selector_alarm_item"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:paddingBottom="@dimen/dp_8"
        android:layout_marginLeft="@dimen/dp_15">

        <TextView
            android:id="@+id/tv_amorpm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_time"
            android:layout_alignTop="@+id/tv_time"
            android:gravity="center"
            android:paddingTop="@dimen/dp_2"
            android:text="上午"
            android:textColor="@color/ubt_tips_txt_color"
            android:textSize="@dimen/dp_16" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_toRightOf="@+id/tv_amorpm"
            android:textColor="@color/ubt_tips_txt_color"
            android:textSize="@dimen/dp_33"
            tools:text="8:00" />

        <TextView
            android:id="@+id/tv_repeat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_time"
            android:layout_marginTop="-5dp"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/ubt_tab_btn_txt_color"
            android:textSize="@dimen/dp_13"
            tools:text="上午" />
    </RelativeLayout>
</RelativeLayout>
