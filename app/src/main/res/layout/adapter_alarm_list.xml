<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe_menu"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_64"
    android:layout_centerInParent="true"
    android:background="@color/ubt_white"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/dp_20"
    app:right_id="@+id/ll_right_menu">

    <TextView
        android:id="@+id/tv_amorpm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_time"
        android:layout_alignTop="@+id/tv_time"
        android:gravity="center"
        android:paddingTop="@dimen/dp_2"
        android:textColor="@color/ubt_tips_txt_color"
        android:textSize="@dimen/sp_16"
        tools:text="上午" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_3"
        android:layout_toRightOf="@+id/tv_amorpm"
        android:textColor="@color/ubt_tips_txt_color"
        android:textSize="@dimen/sp_32"
        tools:text="8:00" />

    <TextView
        android:id="@+id/tv_repeat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_time"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@color/ubt_tab_btn_txt_color"
        android:textSize="@dimen/sp_12"
        tools:text="上午" />
</RelativeLayout>
