<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe_menu"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_45"
    android:layout_centerInParent="true"
    android:background="@color/ubt_white"
    android:orientation="horizontal"
    app:right_id="@+id/ll_right_menu">

    <ImageView
        android:id="@+id/iv_select"
        android:layout_width="@dimen/dp_18"
        android:layout_height="@dimen/dp_18"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/dp_15"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_noselect" />

    <ImageView
        android:id="@+id/iv_type"
        android:layout_width="@dimen/dp_16"
        android:layout_height="@dimen/dp_16"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_7"
        android:layout_marginRight="@dimen/dp_8"
        android:layout_toRightOf="@+id/iv_select"
        android:src="@drawable/ic_call" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/iv_type"
        android:textColor="@color/ubt_tips_txt_color"
        android:textSize="@dimen/sp_16"
        tools:text="HelloWorld" />

    <TextView
        android:id="@+id/tv_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_toRightOf="@+id/tv_content"
        android:textColor="@color/ubt_tips_txt_color"
        android:textSize="@dimen/sp_16"
        android:visibility="invisible"
        tools:text="(2)" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp_15"
        android:textColor="@color/ubt_tab_btn_txt_color"
        android:textSize="@dimen/sp_14"
        tools:text="下午 7:50" />
</RelativeLayout>
