<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe_menu"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:background="@color/ubt_transparent"
    android:fitsSystemWindows="true"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_weight="29" />

    <ImageView
        android:id="@+id/iv"
        android:layout_width="@dimen/dp_142"
        android:layout_height="@dimen/dp_134"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        android:src="@drawable/pic_kong" />

    <TextView
        android:id="@+id/tv_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_57"
        android:layout_marginTop="@dimen/dp_20"
        android:gravity="center"
        android:lineSpacingExtra="@dimen/dp_2"
        android:text="还没有添加联系人\n添加联系人，唤醒八戒打电话"
        android:textColor="@color/empty_color"
        android:textSize="@dimen/dp_16" />

    <TextView
        android:id="@+id/view_empty_click"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_below="@+id/tv_add"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btn_bg_blue"
        android:layout_marginRight="@dimen/dp_67"
        android:layout_marginLeft="@dimen/dp_67"
        android:gravity="center"
        android:text="去添加联系人"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_15" />

    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_weight="50" />
</LinearLayout>
