<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ubt_global_bg_color"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <Button
        android:id="@+id/ubt_btn_adb_open"
        style="@style/UBTMeBtnTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_44"
        android:background="@drawable/selector_ubt_me_item_bg"
        android:gravity="center_vertical|left"
        android:paddingEnd="@dimen/dp_16"
        android:paddingStart="@dimen/dp_16"
        android:visibility="gone"
        android:text="adb打开"
        android:textColor="@color/ubt_tips_txt_color"
        android:textSize="@dimen/sp_15" />

    <Button
        android:id="@+id/ubt_btn_adb_close"
        style="@style/UBTMeBtnTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/selector_ubt_me_item_bg"
        android:gravity="center_vertical|left"
        android:paddingEnd="@dimen/dp_16"
        android:paddingStart="@dimen/dp_16"
        android:visibility="gone"
        android:text="ADB关闭"
        android:textColor="@color/ubt_tips_txt_color"
        android:textSize="@dimen/sp_15" />

    <TextView
        android:id="@+id/tv_devId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_margin="@dimen/dp_14"
        android:text="设备id"/>

    <TextView
        android:id="@+id/tv_im_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_margin="@dimen/dp_14"
        android:text="IM状态"/>

    <TextView
        android:id="@+id/tv_push_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_margin="@dimen/dp_14"
        android:text="Push通道"/>

    <TextView
        android:id="@+id/tv_tvs_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_margin="@dimen/dp_14"
        android:text="tvs数据"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_margin="@dimen/dp_14"
        android:text="tvs环境："/>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RadioButton
            android:id="@+id/testingRadioButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="测试环境" />

        <RadioButton
            android:id="@+id/experienceRadioButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="体验环境" />

        <RadioButton
            android:id="@+id/productionRadioButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="正式环境" />

    </RadioGroup>

    <Button
        android:id="@+id/bt_test_push"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_50"
        android:text="TestPush"/>

</LinearLayout>

