<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ubt_main_bg_color"
    android:orientation="vertical"
    tools:context=".personal.DeviceManageActivity">

    <RelativeLayout
        android:id="@+id/rl_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45">

        <TextView
            android:id="@+id/tv_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:text="取消"
            android:textColor="@color/ubt_tips_txt_color"
            android:textSize="@dimen/sp_15"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:gravity="center"
            android:maxWidth="250dp"
            android:singleLine="true"
            android:text="定制问答"
            android:textColor="@color/ubt_tips_txt_color"
            android:textSize="@dimen/sp_16"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tv_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:text="保存"
            android:textColor="@color/ubt_tab_btn_txt_checked_color"
            android:textSize="@dimen/sp_15"
            android:visibility="visible" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_15" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dp_31"
            android:layout_height="@dimen/dp_31"
            android:src="@drawable/ic_user" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_14"
            android:singleLine="true"
            android:text="我对八戒说"
            android:textColor="@color/ubt_tips_txt_color"
            android:textSize="@dimen/sp_16" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_add_question"
        android:layout_width="@dimen/dp_133"
        android:layout_height="@dimen/dp_36"
        android:layout_marginLeft="@dimen/dp_60"
        android:layout_marginTop="@dimen/dp_6"
        android:background="@drawable/ic_dialogue"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_7"
            android:src="@drawable/ic_add4" />

        <TextView
            android:id="@+id/tv_add_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加问句"
            android:textColor="@color/ubt_white"
            android:textSize="@dimen/sp_15" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_60"
        android:layout_marginRight="@dimen/dp_31"
        android:layout_marginTop="@dimen/dp_6"
        android:background="@drawable/ic_dialogue2"
        android:gravity="center_vertical"
        android:minHeight="@dimen/dp_36"
        android:orientation="horizontal"
        android:visibility="gone">


        <TextView
            android:id="@+id/tv_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:lineSpacingExtra="@dimen/dp_3"
            android:paddingBottom="@dimen/dp_3"
            android:paddingTop="@dimen/dp_3"
            android:textColor="@color/ubt_tips_txt_color"
            android:textSize="@dimen/sp_15"
            tools:text="“規定好地方回復規”" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_31"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dp_31"
            android:layout_height="@dimen/dp_31"
            android:src="@drawable/ic_xiaozhu" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_14"
            android:singleLine="true"
            android:text="八戒对我说"
            android:textColor="@color/ubt_tips_txt_color"
            android:textSize="@dimen/sp_16" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_add_answer"
        android:layout_width="@dimen/dp_133"
        android:layout_height="@dimen/dp_36"
        android:layout_marginLeft="@dimen/dp_60"
        android:layout_marginTop="@dimen/dp_6"
        android:background="@drawable/ic_dialogue"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_7"
            android:src="@drawable/ic_add4" />

        <TextView
            android:id="@+id/tv_add_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加回复"
            android:textColor="@color/ubt_white"
            android:textSize="@dimen/sp_15" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_60"
        android:layout_marginRight="@dimen/dp_31"
        android:layout_marginTop="@dimen/dp_6"
        android:background="@drawable/ic_dialogue2"
        android:gravity="center_vertical"
        android:minHeight="@dimen/dp_36"
        android:orientation="horizontal"
        android:visibility="gone">


        <TextView
            android:id="@+id/tv_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:lineSpacingExtra="@dimen/dp_3"
            android:paddingBottom="@dimen/dp_3"
            android:paddingTop="@dimen/dp_3"
            android:textColor="@color/ubt_tips_txt_color"
            android:textSize="@dimen/sp_15"
            tools:text="“規定好地方回復規”" />

    </LinearLayout>
</LinearLayout>