<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/shape_ubt_member_item_bg"
    android:gravity="center_vertical"
    android:layout_height="@dimen/dp_64">

    <ImageView
        android:layout_marginStart="@dimen/dp_15"
        android:id="@+id/ubt_img_member_photo"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        app:srcCompat="@drawable/ic_logo" />

    <TextView
        android:layout_marginStart="@dimen/dp_15"
        android:id="@+id/ubt_tv_member_name"
        android:layout_width="0px"
        android:layout_height="@dimen/dp_64"
        android:lines="1"
        android:textColor="@color/ubt_tips_txt_color"
        android:textSize="@dimen/sp_16"
        android:gravity="center_vertical"
        android:layout_weight="0.8" />

    <Button
        android:id="@+id/ubt_btn_unpair"
        android:layout_width="wrap_content"
        android:background="@null"
        android:textSize="@dimen/sp_15"
        android:textColor="@color/ubt_dialog_btn_txt_color"
        android:paddingStart="@dimen/dp_14"
        android:paddingEnd="@dimen/dp_14"
        android:gravity="center"
        android:text="@string/ubt_unpair"
        android:layout_height="match_parent" />
</LinearLayout>