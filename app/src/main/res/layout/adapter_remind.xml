<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_84"
    android:layout_centerInParent="true"
    android:background="@drawable/selector_alarm_item"
    android:orientation="horizontal"
    app:right_id="@+id/ll_right_menu">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:gravity="center_vertical"
            android:text="提醒事项:"
            android:textColor="@color/ubt_tab_btn_txt_color"
            android:textSize="@dimen/dp_14" />

        <TextView
            android:id="@+id/tv_remind_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/tv_status"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_2"
            android:layout_toLeftOf="@+id/tv_date"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textColor="@color/ubt_tips_txt_color"
            android:textSize="@dimen/dp_18"
            tools:text="提醒事项:" />

        <TextView
            android:id="@+id/tv_am"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/tv_time"
            android:gravity="center_vertical"
            android:textColor="@color/ubt_tips_txt_color"
            android:textSize="@dimen/dp_18"
            tools:text="上午" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/tv_status"
            android:layout_marginRight="@dimen/dp_15"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textColor="@color/ubt_tips_txt_color"
            android:textSize="@dimen/dp_18"
            tools:text="8:00" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_time"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_3"
            android:gravity="center_vertical|right"
            android:singleLine="true"
            android:textColor="@color/ubt_tab_btn_txt_color"
            android:textSize="@dimen/dp_14"
            tools:text="今天" />
    </RelativeLayout>
</RelativeLayout>
