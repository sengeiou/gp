<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:id="@+id/view_pig_pair_add">

    <ImageView
        android:id="@+id/iv_add_pig"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:src="@drawable/ic_add_to_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.8"/>

    <TextView
        android:id="@+id/tv_add_pig_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_27"
        android:text="@string/ubt_add_pig"
        android:textColor="@color/ubt_white"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@id/iv_add_pig"
        app:layout_constraintTop_toTopOf="@id/iv_add_pig"/>
    <View
        android:layout_width="200dp"
        android:layout_height="1dp"
        android:background="@color/ubt_white"
        app:layout_constraintStart_toStartOf="@id/tv_add_pig_title"
        app:layout_constraintTop_toBottomOf="@id/tv_add_pig_title"
        app:layout_constraintLeft_toLeftOf="@id/tv_add_pig_title"/>
    <TextView
        android:id="@+id/tv_add_pig_title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ubt_add_pig_sub"
        android:textColor="@color/ubt_white"
        style="@style/UBTMainItemMinTxtTheme"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/tv_add_pig_title"
        app:layout_constraintLeft_toLeftOf="@id/tv_add_pig_title"
   />

</android.support.constraint.ConstraintLayout>
