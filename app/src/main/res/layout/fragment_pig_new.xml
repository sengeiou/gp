<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        style="@style/UBTTabTitleTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="13dp"
        android:paddingTop="13dp"
        android:text="@string/ubt_pig"
        android:textColor="@color/ubt_tips_txt_color" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/ubt_16dp">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/ubt_16dp"
                android:layout_marginStart="@dimen/ubt_16dp"
                android:layout_marginTop="13dp"
                app:cardCornerRadius="@dimen/ubt_main_item_corner_radius">

                <RelativeLayout
                    android:id="@+id/ll_voicechat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_001"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ubt_iv_pig_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_14"
                        android:src="@drawable/ic_01" />

                    <TextView
                        android:id="@+id/ubt_tv_pig_title"
                        style="@style/UBTMainItemTxtTheme"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="@dimen/dp_14"
                        android:layout_marginTop="@dimen/dp_28"
                        android:layout_toRightOf="@id/ubt_iv_pig_icon"
                        android:text="@string/ubt_pig_voice_box"
                        android:textSize="@dimen/sp_18" />

                    <TextView
                        android:id="@+id/tv_pig_sn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/ubt_tv_pig_title"
                        android:layout_toRightOf="@+id/ubt_tv_pig_title"
                        android:textColor="#7FFFFFFF"
                        android:textSize="13sp"
                        android:layout_marginLeft="@dimen/dp_5"/>

                    <ImageView
                        android:id="@+id/iv_unreadvoice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/ubt_tv_pig_title"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_toEndOf="@+id/ubt_tv_pig_title"
                        android:src="@drawable/ic_weidu"
                        android:visibility="invisible" />

                    <Button
                        android:id="@+id/btn_bt_binding"
                        style="@style/UBTMainItemMinTxtTheme"
                        android:layout_alignStart="@+id/ubt_tv_pig_title"
                        android:layout_below="@+id/ubt_tv_pig_title"
                        android:background="@drawable/btn_binding"
                        android:text="@string/ubt_start_set_net"
                        android:textColor="#29AAFF" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_function_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_29"
                android:layout_marginRight="@dimen/dp_29"
                android:layout_marginTop="@dimen/dp_20" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_29"
                android:layout_marginRight="@dimen/dp_29"
                android:layout_marginTop="@dimen/dp_20"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/ll_tab_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/rl_voice_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/iv_voice_message"
                            style="@style/UBTMainItemTabImageViewThemeTheme"
                            android:src="@drawable/ic_voicemail" />

                        <TextView
                            style="@style/UBTMainItemTabTxtTheme"
                            android:layout_below="@+id/iv_voice_message"
                            android:text="@string/main_voice_message" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_bajie_pair"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/iv_bajie_pair"
                            style="@style/UBTMainItemTabImageViewThemeTheme"
                            android:src="@drawable/ic_pair" />

                        <TextView
                            style="@style/UBTMainItemTabTxtTheme"
                            android:layout_below="@+id/iv_bajie_pair"
                            android:text="@string/main_baijie_pair" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/rl_alarm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"

                        >

                        <ImageView
                            android:id="@+id/iv_alarm"
                            style="@style/UBTMainItemTabImageViewThemeTheme"
                            android:src="@drawable/ic_alarm" />

                        <TextView
                            style="@style/UBTMainItemTabTxtTheme"
                            android:layout_below="@+id/iv_alarm"
                            android:gravity="center"
                            android:text="@string/main_alarm" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_schedule"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/iv_schedule"
                            style="@style/UBTMainItemTabImageViewThemeTheme"
                            android:src="@drawable/ic_scheduel" />

                        <TextView
                            style="@style/UBTMainItemTabTxtTheme"
                            android:layout_below="@+id/iv_schedule"
                            android:text="@string/main_schedule" />

                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_tab_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_tab_1"
                    android:layout_marginTop="@dimen/dp_20"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/rl_answer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/iv_answer"
                            style="@style/UBTMainItemTabImageViewThemeTheme" />

                        <TextView
                            style="@style/UBTMainItemTabTxtTheme"
                            android:layout_below="@+id/iv_answer"
                            android:text="@string/main_answer" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_call_record"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/iv_call_record"
                            style="@style/UBTMainItemTabImageViewThemeTheme"
                            android:src="@drawable/ic_call_record" />

                        <TextView
                            style="@style/UBTMainItemTabTxtTheme"
                            android:layout_below="@+id/iv_call_record"
                            android:text="@string/main_call_record" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/rl_bt_speaker"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/iv_bt_speaker"
                            style="@style/UBTMainItemTabImageViewThemeTheme"
                            android:src="@drawable/ic_bt_speaker" />

                        <TextView
                            style="@style/UBTMainItemTabTxtTheme"
                            android:layout_below="@+id/iv_bt_speaker"
                            android:text="@string/main_bt_speaker" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:visibility="invisible">

                        <ImageView
                            style="@style/UBTMainItemTabImageViewThemeTheme"
                            android:src="@drawable/ic_scheduel" />

                        <TextView
                            style="@style/UBTMainItemTabTxtTheme"
                            android:text="@string/main_schedule" />

                    </RelativeLayout>

                </LinearLayout>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginTop="@dimen/dp_20"
                android:background="#FFF5F8FB" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_16"
                android:text="试试对八戒说"
                android:textColor="#FF454B59"
                android:textSize="18sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_skill"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_4"></android.support.v7.widget.RecyclerView>


            </RelativeLayout>

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:background="#FFF5F8FB">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="更多玩法，请到“技能”中探索"
                    android:textColor="#FFB4C0C7"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.4" />
            </android.support.constraint.ConstraintLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
