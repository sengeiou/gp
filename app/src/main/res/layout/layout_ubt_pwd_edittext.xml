<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.ubtechinc.commlib.view.UbtClearableEditText
        android:id="@+id/ubt_clearedt_wifi_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/ubt_btn_pwd_visual"
        android:layout_alignTop="@+id/ubt_btn_pwd_visual"
        android:layout_alignBottom="@+id/ubt_btn_pwd_visual"
        android:gravity="bottom"
        android:ems="10"
        android:inputType="textPassword"
        android:lines="1"
        android:textSize="@dimen/sp_15"
        app:defaultIcon="@drawable/ic_close" />

    <View
        android:id="@+id/view_clear_line"
        android:layout_width="@dimen/dp_1"
        android:layout_height="@dimen/dp_19"
        android:layout_gravity="center_vertical"
        android:layout_toLeftOf="@+id/ubt_btn_pwd_visual"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_alignTop="@+id/ubt_btn_pwd_visual"
        android:layout_alignBottom="@+id/ubt_btn_pwd_visual"
        android:visibility="gone"
        android:background="#E2E2E2" />

    <ImageView
        android:id="@+id/ubt_btn_pwd_visual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:padding="@dimen/dp_5"
        android:src="@drawable/ic_closeeyes" />
</RelativeLayout>