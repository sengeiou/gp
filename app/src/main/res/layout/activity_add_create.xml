<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ubt_main_bg_color"
    android:orientation="vertical">

    <com.ubtechinc.goldenpig.actionbar.SecondTitleBarViewTv
        android:id="@+id/rl_titlebar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@android:color/white" />

    <!--<ScrollView-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--android:scrollbars="none">-->

    <!--<LinearLayout-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--android:orientation="vertical">-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_20"
        android:text="我对八戒说"
        android:textColor="@color/pic_remoind_main_color"
        android:textSize="@dimen/sp_15"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/ubt_1px"
        android:layout_marginTop="@dimen/dp_5"
        android:background="@color/ubt_wifi_list_divider"
        android:visibility="gone"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_90"
        android:layout_marginTop="@dimen/dp_5"
        android:background="@color/ubt_white">

        <EditText
            android:id="@+id/et_setquest"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_120"
            android:background="@null"
            android:gravity="start"
            android:hint="你可以这么对八戒说，例如“早上好”"
            android:maxLength="20"
            android:paddingBottom="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:paddingTop="@dimen/dp_10"
            android:textColor="@color/ubt_tips_txt_color"
            android:textColorHint="@color/T33"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="@dimen/sp_17" />

        <TextView
            android:id="@+id/tv_questcount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_15"
            android:text="0/20"
            android:textColor="@color/pic_69gray_color"
            android:textSize="@dimen/sp_14" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/ubt_1px"
        android:background="@color/ubt_wifi_list_divider"
        android:visibility="gone"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_8"
        android:text="*仅支持汉字"
        android:textColor="@color/T33"
        android:textSize="@dimen/sp_13" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_30"
        android:text="八戒对我说"
        android:textColor="@color/pic_remoind_main_color"
        android:textSize="@dimen/sp_15"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/ubt_1px"
        android:layout_marginTop="@dimen/dp_5"
        android:background="@color/ubt_wifi_list_divider"
        android:visibility="gone"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_height="@dimen/dp_165"
        android:background="@color/ubt_white">

        <EditText
            android:id="@+id/et_answerset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_answercount"
            android:layout_alignParentTop="true"
            android:background="@null"
            android:gravity="start"
            android:hint="八戒可以这样回复我说，例如“今天天气真好”"
            android:maxLength="100"
            android:paddingBottom="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:paddingTop="@dimen/dp_10"
            android:textColor="@color/ubt_tips_txt_color"
            android:textColorHint="@color/T33"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="@dimen/sp_17" />

        <TextView
            android:id="@+id/tv_answercount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_15"
            android:text="0/100"
            android:textColor="@color/pic_69gray_color"
            android:textSize="@dimen/sp_14" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/ubt_1px"
        android:background="@color/ubt_wifi_list_divider"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_hint1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_8"
        android:text="*支持汉字、英文、标点、阿拉伯数字等"
        android:textColor="@color/T33"
        android:textSize="@dimen/sp_13" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/tv_save"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_67"
        android:layout_marginRight="@dimen/dp_67"
        android:background="@drawable/shape_ubt_btn_gray"
        android:gravity="center"
        android:text="提交"
        android:textColor="@color/ubt_white"
        android:textSize="@dimen/dp_16" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_13"
        android:gravity="center"
        android:text="公开此训练，通过审核后全部用户可用"
        android:textColor="@color/pic_69gray_color"
        android:textSize="@dimen/dp_14" />

</LinearLayout>
