<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ubt_main_bg_color"
    android:orientation="vertical"
    tools:context=".personal.DeviceManageActivity">

    <RelativeLayout
        android:id="@+id/rl_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45">

        <TextView
            android:id="@+id/tv_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:text="取消"
            android:textColor="@color/ubt_tips_txt_color"
            android:textSize="@dimen/sp_15"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:gravity="center"
            android:maxWidth="250dp"
            android:singleLine="true"
            android:text="定制问答"
            android:textColor="@color/ubt_tips_txt_color"
            android:textSize="@dimen/sp_16"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tv_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:text="保存"
            android:textColor="@color/ubt_tab_btn_txt_checked_color"
            android:textSize="@dimen/sp_15"
            android:visibility="visible" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_15" />

    <EditText
        android:id="@+id/et_set"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_172"
        android:background="@color/ubt_white"
        android:maxLength="100"
        android:gravity="start"
        android:paddingBottom="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:paddingTop="@dimen/dp_10"
        android:textColor="@color/ubt_tips_txt_color"
        android:textSize="@dimen/sp_16" />

    <TextView
        android:id="@+id/tv_hint1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:text="*支持汉字、英文、标点、阿拉伯数字等"
        android:textColor="@color/ubt_tab_btn_txt_color"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/tv_hint2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_6"
        android:text="*最多输入100个字"
        android:textColor="@color/ubt_tab_btn_txt_color"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/tv_hint3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_6"
        android:text="*建议加上标点符号，回复听起来更自然"
        android:textColor="@color/ubt_tab_btn_txt_color"
        android:textSize="@dimen/sp_14" />
</LinearLayout>