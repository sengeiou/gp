    <!--android:paddingTop="@dimen/dp_10"-->
    <!--android:textColor="@color/ubt_tips_txt_color"-->
    <!--android:textSize="@dimen/sp_16" />-->

    <TextView
        android:id="@+id/tv_hint1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:text="*支持汉字、英文、标点、阿拉伯数字等"
        android:textColor="@color/ubt_tab_btn_txt_color"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/tv_hint2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_6"
        android:text="*最多输入100个字"
        android:textColor="@color/ubt_tab_btn_txt_color"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/tv_hint3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_6"
        android:text="*建议加上标点符号，回复听起来更自然"
        android:textColor="@color/ubt_tab_btn_txt_color"
        android:textSize="@dimen/sp_14" />
</LinearLayout>