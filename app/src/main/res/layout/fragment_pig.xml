<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        style="@style/UBTTabTitleTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="13dp"
        android:paddingTop="13dp"
        android:text="@string/ubt_pig"
        android:textColor="@color/ubt_tips_txt_color"/>

    <include layout="@layout/include_tips"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/ubt_16dp">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/ubt_16dp"
                android:layout_marginStart="@dimen/ubt_16dp"
                android:layout_marginTop="13dp"
                app:cardCornerRadius="@dimen/ubt_main_item_corner_radius">

                <LinearLayout
                    android:id="@+id/ll_voicechat"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:background="@drawable/img_001"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/ubt_tv_pig_title"
                        style="@style/UBTMainItemTxtTheme"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="134dp"
                        android:layout_marginTop="45dp"
                        android:text="@string/ubt_my_pig"/>

                    <TextView
                        android:id="@+id/ubt_tv_pig_sub_title"
                        style="@style/UBTMainItemMinTxtTheme"
                        android:layout_marginStart="134dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/ubt_send_voice"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <RelativeLayout
                android:id="@+id/rl_pair_pig"
                android:layout_width="match_parent"
                android:layout_height="@dimen/ubt_layout_add_pig_height"
                android:layout_marginEnd="@dimen/ubt_layout_add_pig_margin"
                android:layout_marginStart="@dimen/ubt_layout_add_pig_margin"
                android:layout_marginTop="@dimen/ubt_layout_add_pig_margintop"
                android:background="@drawable/shape_add_pig_layout_bg"
                android:orientation="horizontal">

                <include
                    layout="@layout/include_pig_pair_add"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <include
                    layout="@layout/include_pig_pair_info"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginEnd="@dimen/ubt_16dp"
                android:layout_marginStart="@dimen/ubt_16dp"
                android:layout_marginTop="@dimen/ubt_main_item_space"
                android:background="@drawable/img_003"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ubt_tv_skill_title"
                    style="@style/UBTMainItemTxtTheme"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="134dp"
                    android:layout_marginTop="45dp"
                    android:text="@string/ubt_skills_manual"/>

                <TextView
                    android:id="@+id/ubt_tv_skill_sub_title"
                    style="@style/UBTMainItemMinTxtTheme"
                    android:layout_marginStart="134dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/ubt_more_funtions"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_record"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginEnd="@dimen/ubt_16dp"
                android:layout_marginStart="@dimen/ubt_16dp"
                android:layout_marginTop="@dimen/ubt_main_item_space"
                android:background="@drawable/img_004"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ubt_tv_call_title"
                    style="@style/UBTMainItemTxtTheme"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="134dp"
                    android:layout_marginTop="45dp"
                    android:alpha="0.5"
                    android:text="@string/ubt_recent_calls"/>

                <TextView
                    android:id="@+id/ubt_tv_call_sub_title"
                    style="@style/UBTMainItemMinTxtTheme"
                    android:layout_marginStart="134dp"
                    android:layout_marginTop="10dp"
                    android:alpha="0.5"
                    android:text="@string/ubt_null"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
