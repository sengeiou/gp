<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/dp_25"
    android:background="@drawable/shape_dialog_bg">

    <TextView
        android:id="@+id/ubt_tv_dialog_tips"
        style="@style/UBTDialogTipsTheme"
        android:layout_width="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="您是八戒的管理员，解绑前请先确认"
        android:gravity="left"
        android:textColor="#FF454B59"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_25"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_dialog_tv_1"
        style="@style/UBTButtonTheme.Cyan"
        android:layout_width="0dp"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:maxLines="1"
        android:background="@drawable/shape_ubt_btn_cyan_gb"
        android:text="仅自己解绑，并转让管理员"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ubt_tv_dialog_tips" />

    <TextView
        android:id="@+id/tv_dialog_tv_2"
        style="@style/UBTButtonTheme.Cyan"
        android:layout_width="0dp"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@drawable/shape_ubt_btn_cyan_gb"
        android:text="全部成员解绑"
        android:maxLines="1"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="@dimen/dp_25"
        app:layout_constraintTop_toBottomOf="@id/tv_dialog_tv_1" />

    <ImageView
        android:id="@+id/iv_dialog_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_dialog_close"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/dp_9"
        android:visibility="gone"
        android:layout_marginRight="@dimen/dp_8"/>

</android.support.constraint.ConstraintLayout>