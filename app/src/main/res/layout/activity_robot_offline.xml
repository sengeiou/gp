<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF5F8FB">

    <TextView
        android:id="@+id/tv_robot_offline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="八戒机器人离线"
        android:textColor="#FFB4C0C7"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/iv_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_25"
        android:src="@drawable/img_off_line"
        app:layout_constraintBottom_toTopOf="@id/tv_robot_offline"
        app:layout_constraintLeft_toLeftOf="@id/tv_robot_offline"
        app:layout_constraintRight_toRightOf="@id/tv_robot_offline" />

    <TextView
        android:id="@+id/tv_switch_wifi"
        style="@style/UBTButtonTheme.Cyan"
        android:layout_width="0dp"
        android:layout_marginTop="@dimen/dp_68"
        android:background="@drawable/selector_ubt_cyan_bg"
        android:enabled="true"
        android:text="开始设置Wi-Fi"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_robot_offline" />


</android.support.constraint.ConstraintLayout>