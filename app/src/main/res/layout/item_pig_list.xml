<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/ubt_pig_list_item_height"
    android:background="@null"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/ubt_tv_pig_name"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/ubt_pig_list_item_height"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/ubt_1px"
        android:background="@null"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text="CMBLINK_8888"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@id/tv_bind"
        android:drawablePadding="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_5"
        android:drawableStart="@drawable/ic_xiaozhutx"
        android:textColor="@color/ubt_tips_txt_color"
        android:textSize="@dimen/ubt_pig_list_item_txt_size" />

    <TextView
        android:id="@+id/tv_bind"
        android:layout_width="@dimen/dp_57"
        android:layout_height="@dimen/dp_23"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@drawable/selector_ubt_bind_pg_bg"
        android:gravity="center"
        android:text="@string/ubt_bind"
        android:enabled="true"
        android:textColor="@drawable/selector_ubt_bind_tx_bg"
        android:textSize="@dimen/sp_12" />

    <ProgressBar
        android:id="@+id/ubt_img_pig_connecting"
        android:layout_width="@dimen/ubt_24dp"
        android:layout_height="@dimen/ubt_24dp"
        android:layout_alignRight="@+id/tv_bind"
        android:layout_alignLeft="@+id/tv_bind"
        android:layout_centerVertical="true"
        android:indeterminateBehavior="repeat"
        android:indeterminateDrawable="@drawable/anim_ubt_loading"
        android:visibility="gone" />

    <View
        android:id="@+id/ubt_pig_dialog_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ubt_1px"
        android:layout_alignParentBottom="true"
        android:background="@color/ubt_wifi_list_divider" />
</RelativeLayout>