<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ubt_white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:background="@color/pic_239fed_color">

        <ImageView
            android:id="@+id/iv_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:contentDescription="@null"
            android:paddingBottom="@dimen/dp_15"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:paddingTop="@dimen/sp_15"
            android:src="@drawable/ic_return" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_29"
            android:layout_centerInParent="true"
            android:background="@drawable/rect__round_bg_create"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_list"
                android:layout_width="@dimen/dp_70"
                android:layout_height="@dimen/dp_29"
                android:background="@drawable/rect__round_bg_create1"
                android:gravity="center"
                android:singleLine="true"
                android:text="已提交"
                android:textColor="@color/pic_239fed_color"
                android:textSize="@dimen/dp_13" />

            <View
                android:layout_width="@dimen/ubt_1px"
                android:layout_height="match_parent"
                android:background="@color/ubt_white" />

            <TextView
                android:id="@+id/tv_cache"
                android:layout_width="@dimen/dp_70"
                android:layout_height="@dimen/dp_29"
                android:gravity="center"
                android:singleLine="true"
                android:text="草稿"
                android:textColor="@color/ubt_white"
                android:textSize="@dimen/dp_13" />

            <View
                android:layout_width="@dimen/ubt_1px"
                android:layout_height="match_parent"
                android:background="@color/ubt_white" />

            <TextView
                android:id="@+id/tv_introduc"
                android:layout_width="@dimen/dp_70"
                android:layout_height="@dimen/dp_29"
                android:gravity="center"
                android:singleLine="true"
                android:text="玩法说明"
                android:textColor="@color/ubt_white"
                android:textSize="@dimen/dp_13" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:gravity="center"
            android:maxWidth="250dp"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_18"
            android:textStyle="normal"
            android:visibility="gone"
            tools:text="众创语料" />

        <ImageView
            android:id="@+id/iv_right"
            android:layout_width="@dimen/dp_45"
            android:layout_height="@dimen/dp_45"
            android:layout_alignParentRight="true"
            android:contentDescription="@null"
            android:paddingBottom="@dimen/dp_15"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:paddingTop="@dimen/sp_15"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_more"
            android:visibility="gone" />
    </RelativeLayout>

    <com.ubtechinc.goldenpig.view.ViewPagerSlide
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:overScrollMode="never" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/ubt_1px"
        android:background="@color/ubt_wifi_list_divider" />

    <LinearLayout
        android:id="@+id/ll_add"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_alignParentBottom="true"
        android:background="@color/ubt_white"
        android:gravity="center"
        android:visibility="visible">

        <ImageView
            android:id="@+id/iv_add"
            android:layout_width="@dimen/dp_33"
            android:layout_height="@dimen/dp_33"
            android:layout_marginRight="@dimen/dp_14"
            android:src="@drawable/ic_add" />

        <TextView
            android:id="@+id/tv_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加问答"
            android:textColor="@color/pic_remoind_main_color"
            android:textSize="@dimen/sp_16" />
    </LinearLayout>
</LinearLayout>