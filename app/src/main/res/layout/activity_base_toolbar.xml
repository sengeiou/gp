<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ubt_main_bg_color"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/ubt_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ubt_toolbar_height"
        android:background="@color/ubt_white">

        <TextView
            android:id="@+id/ubt_tv_toolbar_title"
            style="@style/UBTToolBarTitleTheme"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:foregroundGravity="center"
            android:gravity="center"
            android:text="@string/app_name" />

        <TextView
            android:id="@+id/ubt_tv_set_net_skip"
            style="@style/UBTSkipTxtTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:foregroundGravity="right"
            android:gravity="center_vertical"
            android:text="@string/ubt_skip"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/ubt_imgbtn_add"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_gravity="right"
            android:background="@null"
            android:foregroundGravity="right"
            android:padding="@dimen/dp_10"
            android:src="@drawable/ic_add"
            android:visibility="gone" />
    </android.support.v7.widget.Toolbar>

    <FrameLayout
        android:id="@+id/ubt_toolbar_contentview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@null">

        <RelativeLayout
            android:id="@+id/rl_top_tip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/ubt_color_c1"
            android:padding="@dimen/dp_2"
            android:visibility="gone">

            <com.ubtechinc.goldenpig.comm.widget.MarqueeTextView
                android:id="@+id/dtv_top_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:drawableLeft="@drawable/ic_done2"
                android:drawablePadding="@dimen/dp_2"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:scrollHorizontally="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:text="444565644455dddddddd"
                android:textColor="@color/ubt_tips_txt_color_cc"
                android:textSize="@dimen/sp_13" />

        </RelativeLayout>


    </FrameLayout>
</LinearLayout>