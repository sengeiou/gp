<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/animation_translucent_translate</item>
    </style>

    <style name="animation_translucent_translate" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_left_in</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_right_out</item>
    </style>

    <style name="AppTheme.NoToolbar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/splash_icon</item>
    </style>
    <!--彩色按钮基础样式-->
    <style name="UBTButtonTheme">
        <item name="android:layout_marginRight">@dimen/ubt_login_btn_margin</item>
        <item name="android:layout_marginLeft">@dimen/ubt_login_btn_margin</item>
        <item name="android:layout_width">@dimen/ubt_btn_width</item>
        <item name="android:layout_height">@dimen/ubt_login_btn_height</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/ubt_white</item>
        <item name="android:textSize">@dimen/ubt_btn_txt_size</item>
    </style>
    <!--青色按钮 样式-->
    <style name="UBTButtonTheme.Cyan" parent="UBTButtonTheme">
        <item name="android:background">@drawable/shape_ubt_btn_cyan_gb</item>
    </style>
    <!--紫色按钮 样式-->
    <style name="UBTButtonTheme.Purple" parent="UBTButtonTheme">
        <item name="android:background">@drawable/shape_ubt_btn_purple_gb</item>
    </style>
    <!--主页Tab RadioButton 样式-->
    <!--加载等待对话框-->
    <!--页面居中提示文本样式-->
    <style name="UBTTipsTxtTheme">
        <item name="android:textSize">@dimen/ubt_btn_txt_size</item>
        <item name="android:textColor">@color/ubt_tips_txt_color</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="UBTSkipTxtTheme">
        <item name="android:background">@null</item>
        <item name="android:paddingEnd">@dimen/ubt_16dp</item>

        <item name="android:paddingStart">@dimen/ubt_0dp</item>
        <item name="android:paddingBottom">@dimen/ubt_0dp</item>
        <item name="android:textColor">@drawable/selector_ubt_skip_btn_txt</item>
        <item name="android:textSize">@dimen/ubt_skip_txt_size</item>
    </style>

    <style name="UBTToolBarTitleTheme" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/ubt_toolbar_title_txt_size</item>
        <item name="android:textColor">@color/ubt_tips_txt_color</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!--UBT 基础对话框的，提示语样式-->
    <style name="UBTDialogTipsTheme" parent="TextAppearance.AppCompat.Title">
        <item name="android:color">@color/ubt_tips_txt_color</item>
        <item name="android:textSize">@dimen/ubt_dialog_tips_txt_size</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/ubt_16dp</item>
        <item name="android:layout_marginRight">@dimen/ubt_16dp</item>
        <item name="android:layout_marginTop">@dimen/ubt_dialog_margintop</item>
        <item name="android:layout_marginBottom">@dimen/ubt_dialog_marginbottom</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="UBTDialogEdtTheme" parent="UBTDialogTipsTheme">
        <item name="android:background">@drawable/shape_ubt_dialog_edt__gb</item>
    </style>

    <style name="UBTDialogBottonTheme" parent="Base.Widget.AppCompat.Button">
        <item name="android:lines">1</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/ubt_tips_txt_color</item>
        <item name="android:textSize">@dimen/ubt_dialog_tips_txt_size</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/ubt_dialog_margintop</item>
    </style>

    <style name="UBTSetWifiEditTheme" parent="Base.Widget.AppCompat.EditText">
        <item name="android:layout_height">@dimen/ubt_edt_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">@dimen/ubt_set_wifi_edt_size</item>
        <item name="android:textColor">@color/ubt_tips_txt_color</item>
        <item name="android:layout_marginTop">@dimen/ubt_edt_wifi_name_margintop</item>
        <item name="android:layout_marginStart">@dimen/ubt_edt_marginstart</item>
        <item name="android:layout_marginEnd">@dimen/ubt_edt_marginstart</item>
    </style>

    <style name="UBTTabTitleTheme" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/ubt_white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@null</item>
    </style>
    <!--  主页八戒，磁贴文字样式-->
    <style name="UBTMainItemTxtTheme" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/ubt_white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lines">1</item>
    </style>

    <style name="UBTMainItemMinTxtTheme" parent="UBTMainItemTxtTheme">

        <item name="android:textSize">13sp</item>
    </style>

    <!--主页item tab-->

    <!--me页按钮样式-->
    <style name="UBTMeBtnTheme">
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:background">@drawable/selector_ubt_me_item</item>
        <item name="android:drawableEnd">@drawable/ic_goto</item>
        <item name="android:layout_height">@dimen/dp_44</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:drawablePadding">@dimen/dp_14</item>
        <item name="android:paddingStart">@dimen/dp_26</item>
        <item name="android:paddingEnd">@dimen/dp_26</item>
        <item name="android:textSize">@dimen/sp_15</item>
        <item name="android:textColor">@color/ubt_tips_txt_color</item>
    </style>

    <declare-styleable name="StateView">
        <attr name="emptyResource" format="reference" />
        <attr name="retryResource" format="reference" />
        <attr name="loadingResource" format="reference" />
    </declare-styleable>

    <style name="MenuDialogStyle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="MenuDialogAnimation" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit</item>
    </style>

    <!-- 标题1样式 -->

    <style name="pop_view">
        <item name="android:windowEnterAnimation">@anim/pop_view_show</item>
        <item name="android:windowExitAnimation">@anim/pop_view_hide</item>
    </style>
</resources>
