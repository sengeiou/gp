<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:keepScreenOn="true">
    <android.support.v7.widget.Toolbar
        android:id="@+id/ubt_qr_toolbar"
        android:background="@null"
        android:layout_width="match_parent"
        android:layout_height="44dp">
        <TextView
            android:textColor="#454B59"
            android:textSize="18sp"
            android:id="@+id/ubt_tv_toolbar_title"
            android:foregroundGravity="center"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </android.support.v7.widget.Toolbar>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <SurfaceView
            android:id="@+id/preview_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center" />

        <com.ubt.qrcodelib.view.ViewfinderView
            android:id="@+id/viewfinder_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/ubt_tv_error"
            android:layout_width="match_parent"
            android:background="#FE4C4C"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:gravity="center"
            android:visibility="gone"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="1dp"
            android:layout_height="30dp" />

        <!-- <include
             layout="@layout/header_title_layout"
             android:layout_alignParentTop="true" />-->

    </FrameLayout>
</LinearLayout>
